<ginn>
  <global>
     <wish gesture="Drag" fingers="3">
      <action name="Scale" when="finish">
        <trigger prop="delta y" min="-300" max="-40"/>
        <key modifier1="Control_L" modifier2="Alt_L">Down</key>
      </action>
     </wish>
     <wish gesture="Drag" fingers="3">
      <action name="Scale_rw" when="finish">
        <trigger prop="delta y" min="40" max="300"/>
        <key modifier1="Control_L" modifier2="Alt_L">Down</key>
      </action>
     </wish>
     <wish gesture="Drag" fingers="3">
      <action name="LeftDesktop" when="finish">
        <trigger prop="delta x" min="150" max="300"/>
        <key modifier1="Control_L" modifier2="Alt_L">Left</key>
      </action>
    </wish>
    <wish gesture="Drag" fingers="3">
      <action name="RightDesktop" when="finish">
        <trigger prop="delta x" min="-300" max="-150"/>
        <key modifier1="Control_L" modifier2="Alt_L">Right</key>
      </action>
    </wish>
  </global>
</ginn>
